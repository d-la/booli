					<td> <img src="img/Red_Circle.png" height=40 width=40 alt="This Class is Currently Unavailable" class="availability-icon" /> </td>
					<td> <img src="img/notification-bell.png" alt="Notification Bell" class="notification-bell" width=40 height=40 /> </td>
					<td> <a href="" class="enroll-button">Enroll</a> </td>
				</tr>
				<tr>
					<td>CSCI 370: Software Engineering</td>
					<td>Andy Abreu</td>
					<td>Friday</td>
					<td>6:30 PM - 9:20 PM</td>
					<td> <img src="img/Red_Circle.png" height=40 width=40 alt="This Class is Currently Unavailable" class="availability-icon" /> </td>
					<td> <img src="img/notification-bell.png" alt="Notification Bell" class="notification-bell" width=40 height=40 /> </td>
					<td> <a href="" class="enroll-button">Enroll</a> </td>
				</tr>
				<tr>
					<td>CSCI 370: Software Engineering</td>
					<td>John Svadlenka</td>
					<td>Monday, Wednesday</td>
					<td>3:10 PM - 4:25 PM</td>
					<td> <img class="availability-icon" src="img/Green_Circle.png" height=40 width=40 alt="This Class is Currently Available"/> </td>
					<td> <img src="img/notification-bell.png" alt="Notification Bell" class="notification-bell" width=40 height=40 /> </td>
